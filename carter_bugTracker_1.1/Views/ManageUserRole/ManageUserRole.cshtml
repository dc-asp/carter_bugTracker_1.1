
@{
    ViewBag.Title = "ManageUserRole";
}

<h2>ManageUserRole</h2>

<h2>This is where I will be redirected when I want to manage an individual</h2>

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()
    @Html.Hidden("UserId",(string)ViewBag.UserId)

    <div class="form-group">
        @Html.Label("Assign Role", null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Roles", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

